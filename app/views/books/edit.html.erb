
  <% if flash[:notice] %>
  <p id="notice">
    <%=flash[:notice] %></p>
  <% end %>

  <h1>Editing Book</h1>

    <%= form_with model: @book do |f|%>
    <div class="field">
      <label for="book_title">Title</label>
      <%=f.text_field :title %>
    </div>
    <div class="field">
      <label for="book_body">Title</label>
      <%=f.text_area :body %>
    </div>
    <div class="actions">
      <%=f.submit 'Update Book'%>
    </div>
    <% end %>
  </form>
  <%=link_to"Show",book_path(@book.id) %>
