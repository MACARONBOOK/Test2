      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>


    <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
    </div>
    <div class="field">
