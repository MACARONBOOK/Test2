<html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <!-- CSSファイルの読み込み -->
    <link rel="stylesheet" href="application.css" />
   <title>WebCampBackendNew</title>
  </head>
  <body>
  <% if flash[:notice] %>
  <p id="notice">
    <%=flash[:notice] %></p>
  <% end %>
  <h1>Books</h1>

  <table>
    <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colospan="3">
    </tr>
    </thread>
     <%= @books.each do |book|%>
    <tbody>
    <tr>
      <td><%=book.title(1) %></td>
      <td><%=book.body(1) %></td>
      <td>
        <a>
        <%=link_to'Show', book_path(1) %>
        </a>
      </td>
      <td>
        <a>
        <%=link_to'Edit', edit_book_path(1) %>
        </a>
      </td>
      <td>
        <%=link_to'Destroy',book_path(book.id), method :delete, "data-confirm"=> "Are you sure?"} %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>

  <h2>New Book</h2>
    <%= render 'layouts/error_messages', model: f.object %>
    <div id="error_explanation">
    </div>

   <form class="new_book" id="new_book" action="/books" accept-charset="UTF-8" method="post">
    <input name="utf8" type="hidden" value="✔">
    <input type="hidden" name="authenticity_token" value="zLEJiT2ormS+SlFxxUxuzx8TZblxEDQfCjRQxzcGW2AyL8GFD0pPJUwiIZjrck9Dtlsjcww/JnR3tZTbGROGqQ==">


  <%= form_with model: Book.new do |f| %>

    <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
    </div>
    <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body%>
    </div>
    <div class="actions">
    <%= f.submit 'Create Book' %>
    </div>
  <% end %>
  </form>

  </body>
</html>